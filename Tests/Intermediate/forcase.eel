/* + ----------------- [ Forcase ] ----------------- + *
 * + From top to bottom checks every condition given + *
 * + and executes all statements if the condition is + *
 * + evaluated as TRUE. When all the conditions are  + *
 * + checked if at least one was evaluated as TRUE   + *
 * + it repeats the same process. Finally it exits   + *
 * + the forcase statement when all the conditions   + *
 * + are now evaluated as FALSE.                     + *
 * + ----------------------------------------------- + *
 */

program Forcase
    
    a := 5;                             // 0.a = 5
    b := 6;                             // 1.b = 6               
    c := 7;                             // 2.c = 7
    d := 8;                             // 3.d = 8
    
    forcase                         
        when a>1 : print a; input a;     // 4.prints a until a <= 1 || 5.goes to next "when"
        when b>2 : print b; input b;     // 6.prints b until b <= 2 || 7.goes to next "when"
        when c>3 : print c; input c;     // 8.prints c until c <= 3 || 9.goes to next "when"
        when d>4 : print d; input d;     //10.prints d until d <= 4 ||11.exits forcase
    endforcase  

endprogram                              // 12.halts

