/* + ----------------- [ While ] ----------------- + *
 * + A classic while statement.                    + *
 * + --------------------------------------------- + *
 */

program While

    input i;                      //0.asks for a number
    counter := 0;                 //1.counter = 0
    
    while [ counter <= i ]        //2.counts from 0 to i if i >= counter.
        
        print counter;
        counter := counter + 1
    endwhile                

endprogram                        //3.halts

